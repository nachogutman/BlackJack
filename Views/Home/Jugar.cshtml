@{
    ViewData["Title"] = "Juego";
}


<p> @ViewBag.ListaJugadores[@ViewBag.Turno].Nombre </p>
<p> @ViewBag.ListaJugadores[@ViewBag.Turno].Saldo </p>
<h1> @ViewBag.MontoPozo </h1>

<button onclick="cargarCartas();"> Cargar Cartas </button>

<script>
    function cargarCartas(){
        $.ajax({
            url: '/Home/TraerCartas',
            data: {cant: 2},
            type:'POST',
            dataType:'JSON',            
            success:
                function (){
                    <img class="imagenesCartas" src="@ViewBag.Cartas[0].Foto"> </img>
                    <img class="imagenesCartas" src="@ViewBag.Cartas[1].Foto"> </img>

                    <input type="number" id="apuesta" min="100" max="@ViewBag.MontoPozo" required autocomplete="off"> </input>

                    <button onclick="apostar()"> Apostar </button>
                    <button onclick="pasar()"> Pasar </button>
                }
        });
    }

    function apostar(){
        $.ajax({
            url: '/Home/Apuesta',
            data: {montoApostado: $("#apuesta").val(), indexJugador: @ViewBag.Turno, primerasCartas: @ViewBag.Cartas},
            type:'POST',
            dataType:'JSON',            
            success:
                function (){
                    <img src="@ViewBag.CartaFinal.Foto"></img>
                    
                },
            error:
                function(){
                    console.log('error');
                }
        });
    }
</script>